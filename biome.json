{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!public"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noDefaultExport": { "level": "error" },
        "noInferrableTypes": "error",
        "noNegationElse": { "level": "error" },
        "noParameterAssign": "error",
        "noUnusedTemplateLiteral": "error",
        "noUselessElse": "error",
        "useAsConstAssertion": "error",
        "useBlockStatements": { "level": "error" },
        "useCollapsedElseIf": { "level": "error" },
        "useConsistentArrayType": { "level": "error" },
        "useDefaultParameterLast": "error",
        "useEnumInitializers": "error",
        "useForOf": { "level": "error" },
        "useFragmentSyntax": { "level": "error" },
        "useNumberNamespace": "error",
        "useSelfClosingElements": "error",
        "useShorthandAssign": { "level": "error" },
        "useSingleVarDeclarator": "error"
      },
      "suspicious": {
        "noConsole": { "level": "error" },
        "noSkippedTests": { "level": "error" },
        "useAwait": { "level": "error" }
      }
    }
  },
  "css": {
    "parser": {
      "cssModules": true
    }
  },
  "json": {
    "assist": {
      "enabled": false
    }
  },
  "overrides": [
    {
      "includes": [
        "astro.config.ts",
        "eslint.config.js",
        "vite.config.ts",
        "vitest.config.ts"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": { "level": "off" }
          }
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
